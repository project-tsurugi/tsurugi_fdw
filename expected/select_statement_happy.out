/* Test setup: DDL of the PostgreSQL */
CREATE FOREIGN TABLE t1_select_statement (
    c1 INTEGER,
    c2 INTEGER,
    c3 BIGINT,
    c4 REAL,
    c5 DOUBLE PRECISION,
    c6 CHAR(10),
    c7 VARCHAR(26)
) SERVER tsurugidb;
CREATE FOREIGN TABLE t2_select_statement (
    c1 INTEGER,
    c2 INTEGER,
    c3 BIGINT,
    c4 REAL,
    c5 DOUBLE PRECISION,
    c6 CHAR(10),
    c7 VARCHAR(26)
) SERVER tsurugidb;
CREATE FOREIGN TABLE t3_select_statement (
    c1 INTEGER,
    c2 CHAR(10)
) SERVER tsurugidb;
